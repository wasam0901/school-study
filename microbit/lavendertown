input.onButtonPressed(Button.B, () => {
    for (let i = 0; i < 3000; i++) {
        basic.showIcon(IconNames.Ghost)
        basic.showLeds(`
            . . . . .
            . . . . .
            . . . . .
            . . . . .
            . . . . .
            `)
    }
})
